{
  "version": 2,
  "name": "sprint-velocity-calculator",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/tools/velocity-calculator/(.*)",
      "destination": "/src/$1"
    },
    {
      "source": "/tools/velocity-calculator/",
      "destination": "/src/index.html"
    },
    {
      "source": "/tools/velocity-calculator/assets/(.*)",
      "destination": "/assets/$1"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/tools/velocity-calculator/",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*\\.css)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/assets/(.*\\.js)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ]
}
